# Agentic Testing LLM Configuration
# Copy this to .env and fill in your API keys

# Provider Selection: "claude", "gemini", or "mock"
AGENTIC_LLM_PROVIDER=gemini

# Claude (Anthropic) Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Gemini (Google) Configuration
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Common Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Fuel Meter Budgets (per agent type)
VERIFIER_MAX_TOKENS=10000
ARCHITECT_MAX_TOKENS=20000
REFINER_MAX_TOKENS=15000
PEER_MAX_TOKENS=8000
